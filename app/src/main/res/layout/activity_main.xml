<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">

	<EditText
		android:id="@+id/ETHashString"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ems="10"
		android:layout_marginTop="50dp"
		android:gravity="center"
		android:inputType="textPersonName"
		android:hint="Enter Hashed String"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>

	<Button
		android:id="@+id/BSearch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Search"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@id/ETHashString"
		android:layout_marginTop="50dp"
		/>

	<TextView
		android:id="@+id/TVName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@id/BSearch"
		android:layout_marginTop="50dp"
		/>

	<TextView
		android:id="@+id/TVRoll"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@id/TVName"
		android:layout_marginTop="50dp"
		/>

	<TextView
		android:id="@+id/TVEmail"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=""
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toBottomOf="@id/TVRoll"
		android:layout_marginTop="50dp"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>